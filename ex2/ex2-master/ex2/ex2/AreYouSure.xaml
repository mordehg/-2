<Window x:Class="ex2.AreYouSure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex2"
        mc:Ignorable="d"
        Title="AreYouSure" Height="160" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="top" Margin="0,30,0,0">Are you sure? this action is irreversible</TextBlock>
        <Button x:Name="btnStart" Grid.Row="2" Grid.Column="1" HorizontalAlignment="center" Click="btnSure_click" Padding="5,0,5,0" Margin="60,70,0,30">Sure</Button>
        <Button x:Name="btnCancel" Grid.Row="1" HorizontalAlignment="center" Grid.Column="1" Padding="5,0,5,0" Margin="0,70,60,30" Click="btnCancel_click">Cancel</Button>
    </Grid>
</Window>
